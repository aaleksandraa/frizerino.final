<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Proxy sitemap requests to API backend
  RewriteRule ^sitemap\.xml$ https://api.frizerino.com/sitemap.xml [P,L]
  RewriteRule ^sitemap-static\.xml$ https://api.frizerino.com/sitemap-static.xml [P,L]
  RewriteRule ^sitemap-cities\.xml$ https://api.frizerino.com/sitemap-cities.xml [P,L]
  RewriteRule ^sitemap-salons\.xml$ https://api.frizerino.com/sitemap-salons.xml [P,L]
  RewriteRule ^sitemap-staff\.xml$ https://api.frizerino.com/sitemap-staff.xml [P,L]
  RewriteRule ^sitemap-services\.xml$ https://api.frizerino.com/sitemap-services.xml [P,L]
  
  # Handle React Router - sve rute idu na index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule ^(.*)$ /index.html [L,QSA]
</IfModule>

# Disable directory listing
Options -Indexes

# Default document
DirectoryIndex index.html

# Kompresija
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Cache control
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Error documents - fallback to index.html for SPA
ErrorDocument 404 /index.html